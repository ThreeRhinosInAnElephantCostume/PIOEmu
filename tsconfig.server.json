{
    "compilerOptions": 
    {
        "module": "nodenext",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "preserve",
        "outDir": "_build",
        "strictFunctionTypes": true,
        "sourceMap": true,
        "strict": true,   
        "esModuleInterop": true,
    },
    "exclude": 
    [
        "./public/*",
        "./public",
        "./public/**",
        "**/public/*",
        "../public/*",
        "node_modules",
        "**/node_modules/*",
        "../node_modules",
        "../**/node_modules/*",
    ],
    "include": 
    [
        "./server/",
        "./server/*",
    ]
}